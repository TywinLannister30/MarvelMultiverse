        {
            errorMessage = "Please enter a name.";
            return;
        }

        try
        {
            loading = true;
            character = await MarvelApiClient.GetCharacterAsync(selectedName);
            if (character == null)
            {
                errorMessage = "Character not found or error calling API.";
            }
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

